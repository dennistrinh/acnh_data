<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="description" content="All northern hemisphere bugs in Animal Crossing: New Horizons">
    <meta name="viewport" content="width=device-width">
    <title>Animal Crossing New Horizons Bugs</title>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
    <link rel="shortcut icon" type="images/x-icon" href="/images/favicon.ico">
    <link rel="stylesheet" href="/css/main.css" type="text/css">
    <link rel="stylesheet" href="/css/navbar.css" type="text/css">
    <link rel="stylesheet" href="/css/tables.css" type="text/css">
    <script type="text/javascript" src="/func/sortRows.js"></script>
    <script type="text/javascript" src="/func/tableFilter.js"></script>
  </head>
  <body>
    <header id="navbar">
      <div class="menu_container">
        <ul class="menu">
          <li class="menu_button"><a href="./" class="menu_link">Home</a></li>
          <li class="menu_button"><a href="./bugs" class="menu_link">Bugs</a></li>
          <li class="menu_button"><a href="./fish" class="menu_link">Fish</a></li>
          <li class="menu_button"><a href="./sea" class="menu_link">Sea Creatures</a></li>
          <li class="menu_button"><a href="./active" class="menu_link">Active This Month</a></li>
          <li class="menu_button"><a href="./github" class="menu_link"><img src="images/octocat.png" id="octocat" title="github"></a></li>
        </ul>
      </div>
    </header>
    <main id="content">
      <div class="month_input">
        <form method="post">
          <label id="months" class="month_label">Month</label>
          <select name="month" class="month_select" aria-labelledby="months">
            <option value="January">January</option>
            <option value="February">February</option>
            <option value="March">March</option>
            <option value="April">April</option>
            <option value="May">May</option>
            <option value="June">June</option>
            <option value="July">July</option>
            <option value="August">August</option>
            <option value="September">September</option>
            <option value="October">October</option>
            <option value="November">November</option>
            <option value="December">December</option>
          </select>
          <input class="month_submit" type="submit" value="Search!" formaction="/bugs">
        </form>
      </div>
      <div class="filter_input">
        <label id="filter" for="userInput" class="month_label">Filters</label>
        <select id="option" class="month_select" aria-labelledby="filter">
          <option value=0>Name</option>
          <option value=2>Location</option>
          <option value=4>Time Found</option>
          <option value=5>Price</option>
        </select>
        <input type="text" class="user_input" id="userInput" placeholder="Search using filter options!" onkeyup="tableFilter('bugs')"> 
      </div>
      <div class="table_container">
        <h1 class="table_headers">All Bugs in Animal Crossing New Horizons</h1>
        <table id="bugs">
          <tr>
            <th onclick="sortRows('bugs', 0)">Name</th>
            <th onclick="sortRows('bugs', 1)">Image</th>
            <th onclick="sortRows('bugs', 2)">Location</th>
            <th onclick="sortRows('bugs', 3)">Months Available</th>
            <th onclick="sortRows('bugs', 4)">Time Found</th>
            <th onclick="sortRows('bugs', 5)">Price</th>
          </tr>
          <%- include("./functions/renderImages") %>
          <% for (let i = 0; i < data.length; i++) { %>
          <tr>
            <td><%= data[i].name %></td>
            <td><img class="table_img" src="/images/bugs/<%= renderImages(data[i].name) %>" alt="<%= renderImages(data[i].name) %>" /></td>
            <td><%= data[i].location %></td>
            <% if (data[i].start_month_1 && data[i].start_month_2) { %>
            <td><%= data[i].start_month_1 %> - <%= data[i].end_month_1 %><br><%= data[i].start_month_2 %> - <%= data[i].end_month_2 %></td>
            <% } else if (data[i].start_month_1) { %>
            <td><%= data[i].start_month_1 %> - <%= data[i].end_month_1 %>
            <% } else { %>
            <td>All Year</td>
            <% } %>
            <% if (data[i].start_time_1 && data[i].start_time_2) { %>
            <td><%= data[i].start_time_1 %> - <%= data[i].end_time_1 %><br><%= data[i].start_time_2 %> - <%= data[i].end_time_2 %></td>
            <% } else if (data[i].start_time_1) { %>
            <td><%= data[i].start_time_1 %> - <%= data[i].end_time_1 %>
            <% } else { %>
            <td>All Day</td>
            <% } %>
            <td><%= data[i].price %></td>
          </tr>
          <% } %>
        </table>
      </div>
    </main>
  </body>
</html>
