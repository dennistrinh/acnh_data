<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="description" content="All northern hemisphere fish in Animal Crossing: New Horizons">
  <meta name="viewport" content="width=device-width">
  <title>Animal Crossing New Horizons Fish</title>
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
  <link rel="shortcut icon" type="images/x-icon" href="/images/favicon.ico">
  <link rel="stylesheet" href="/css/main.css" type="text/css">
  <link rel="stylesheet" href="/css/navbar.css" type="text/css">
  <link rel="stylesheet" href="/css/tables.css" type="text/css">
  <script type="text/javascript" src="/func/sortRows.js"></script>
  <script type="text/javascript" src="/func/tableFilter.js"></script>
</head>
<body>
  <header id="navbar">
    <div class="menu_container">
      <ul class="menu">
        <li class="menu_button">
          <a href="./" class="menu_link">
            <img class="menu_icon" src="/images/icons/home.svg" alt="Home" title="Home">
            <span>Home</span>
          </a>
        </li>
        <li class="menu_button">
          <a href="./bugs" class="menu_link">
            <img class="menu_icon" src="/images/icons/bug.svg" alt="bug" title="Bugs">
            <span>Bugs</span>
          </a>
        </li>
        <li class="menu_button">
          <a href="./fish" class="menu_link">
            <img class="menu_icon" src="/images/icons/fish.svg" alt="fish" title="Fish">
            <span>Fish</span>
          </a>
        </li>
        <li class="menu_button">
          <a href="./sea" class="menu_link">
            <img class="menu_icon" src="/images/icons/sea.svg" alt="docker_whale" title="Sea Creatures">
            <span>Sea Creatures</span>
          </a>
        </li>
        <li class="menu_button">
          <a href="./active" class="menu_link">
            <img class="menu_icon" src="/images/icons/active.svg" alt="hourglass" title="Active">
            <span>Active This Month</span>
          </a>
        </li>
        <li class="menu_button">
          <a href="./github" class="menu_link">
            <img class="menu_icon" src="images/icons/github.svg" alt="octocat" title="Github">
            <span>Github</span>
          </a>
        </li>
      </ul>
    </div>
  </header>
  <main id="content">
    <div class="month_input">
      <form method="post">
        <label for="months" class="month_label">Month</label>
        <select name="month" class="month_select">
          <option value="January">January</option>
          <option value="February">February</option>
          <option value="March">March</option>
          <option value="April">April</option>
          <option value="May">May</option>
          <option value="June">June</option>
          <option value="July">July</option>
          <option value="August">August</option>
          <option value="September">September</option>
          <option value="October">October</option>
          <option value="November">November</option>
          <option value="December">December</option>
        </select>
        <input class="month_submit" type="submit" value="Search!" formaction="/fish">
      </form>
    </div>
    <div class="filter_input">
      <label id="filter" for="userInput" class="month_label">Filters</label>
      <select id="option" class="month_select">
        <option value=0>Name</option>
        <option value=2>Location</option>
        <option value=4>Time Found</option>
        <option value=5>Price</option>
      </select>
      <input type="text" class="user_input" id="userInput" placeholder="Search using filter options!" onkeyup="tableFilter('fish')"> 
    </div>
    <div class="table_container">
      <h1 class="table_headers">All Fish in Animal Crossing New Horizons</h1>
      <table id="fish">
        <tr>
          <th onclick="sortRows('fish', 0)">Name</th>
          <th onclick="sortRows('fish', 1)">Image</th>
          <th onclick="sortRows('fish', 2)">Location [Shadow Size]</th>
          <th onclick="sortRows('fish', 3)">Months Available</th>
          <th onclick="sortRows('fish', 4)">Time Found</th>
          <th onclick="sortRows('fish', 5)">Price</th>
        </tr>
        <%- include("./functions/renderImages") %>
        <% for (let i = 0; i < data.length; i++) { %>
        <tr>
          <td><%= data[i].name %></td>
          <td><img src="/images/fish/<%= renderImages(data[i].name) %>" /></td>
          <td><%= data[i].location %> [<%= data[i].shadow_size %>]</td>
          <% if (data[i].start_month_1 && data[i].start_month_2) { %>
          <td><%= data[i].start_month_1 %> - <%= data[i].end_month_1 %><br><%= data[i].start_month_2 %> - <%= data[i].end_month_2 %></td>
          <% } else if (data[i].start_month_1) { %>
          <td><%= data[i].start_month_1 %> - <%= data[i].end_month_1 %>
          <% } else { %>
          <td>All Year</td>
          <% } %>
          <% if (data[i].start_time_1 && data[i].start_time_2) { %>
          <td><%= data[i].start_time_1 %> - <%= data[i].end_time_1 %><br><%= data[i].start_time_2 %> - <%= data[i].end_time_2 %></td>
          <% } else if (data[i].start_time_1) { %>
          <td><%= data[i].start_time_1 %> - <%= data[i].end_time_1 %>
          <% } else { %>
          <td>All Day</td>
          <% } %>
          <td><%= data[i].price %></td>
        </tr>
        <% } %>
      </table>
    </div>
  </main>
</body>
</html>
